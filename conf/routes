# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Index.index()

POST    /competence                 controllers.UserController.addCompetence()

POST	/removecompetence/$id<[0-9]+>	controllers.UserController.removeCompetenceProfile(id: Int)

GET     /user/$id<[0-9]+>           controllers.RecruiterController.getDetailedUserView(id: Int)

POST	/hireApplicant/$id<[0-9]+>	controllers.RecruiterController.hireApplicant(id: Int)
POST	/denyApplicant/$id<[0-9]+>	controllers.RecruiterController.denyApplicant(id: Int)

POST    /availability               controllers.UserAvailabilityController.addAvailability()

GET     /login                      controllers.UserController.login()
POST    /login                      controllers.UserController.authenticate()
GET     /logout                     controllers.UserController.logout()

GET		/register					controllers.UserController.register()
POST	/register					controllers.UserController.newUser()

GET    /usernameAvailable			controllers.UserController.usernameAvailable(usercontroller: String)

# Javascript routing
GET    /assets/javascripts/routes   controllers.UserController.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
