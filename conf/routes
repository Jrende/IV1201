# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Index.index()

POST    /competence                 controllers.UserController.addCompetence()

POST	/removecompetence/:id		controllers.UserController.removeCompetenceProfile(id: Long)

GET     /user/:id			        controllers.RecruiterController.getDetailedUserView(id: Long)

POST	/hireApplicant/:id			controllers.RecruiterController.hireApplicant(id: Long)
POST	/denyApplicant/:id			controllers.RecruiterController.denyApplicant(id: Long)

POST    /availability               controllers.UserController.addAvailability()

GET     /login                      controllers.UserController.login()
POST    /login                      controllers.UserController.authenticate()
GET     /logout                     controllers.UserController.logout()

GET		/register					controllers.UserController.register()
POST	/register					controllers.UserController.newUser()

GET    /usernameAvailable			controllers.UserController.usernameAvailable(usercontroller: String)

# Javascript routing
GET    /assets/javascripts/routes   controllers.UserController.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
